<odoo>
    <data>
        <template id="exe_payment_group_custom" inherit_id="account_payment_group.report_payment_group_document">
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" position="replace">
                <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <div class="header"  style="margin-bottom: 0px !important;">
                    <div class="row" style="border: 1px solid black; border-radius: 10px; margin-bottom: 0px !important;">
                    <!--COMPANY LOGO-->
                    <div class="col-3 text-left">
                        <!--<img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" style="display: block !important; float: left !important; position: absolute !important; margin-top: 0px !important; margin-bottom: 0px !important; top: 10px !important; left: 10px !important; bottom: auto !important; max-height: 95px;"/>-->
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-width: 230px; max-height: 60px; margin-top: 30px;" alt="Logo"/>
                    </div><!--END COMPANY LOGO-->
                    <!--FE-->
                    <div class="col-2 text-center" style="margin-top: 42px !important;">
                    <span style="font-size: 11px; font-weight: bold;"><br/></span>
                </div>
          <!--END FE-->
          <!--DOCUMENT LETTER-->
                <div class="col-2 text-center">
                    <div class="card" style="margin:0px;">
                    <t t-if="o.partner_type == 'supplier'">
                        <div class="card-header" style="font-size: 48px;padding:0px;">PO</div>
                    <div class="card-body" style="height: 20px;padding:0px;"><br/></div>
                    </t>
                    <t t-if="o.partner_type == 'customer'">
                        <div class="card-header" style="font-size: 48px;padding:0px;">REC</div>
                    <div class="card-body" style="height: 20px;padding:0px;"><br/></div>
                    </t>
            
                </div>
            </div>
            <!--END DOCUMENT LETTER-->
      <!--TIPO,NRO Y FECHA FACTURA-->
      <div class="col-5 text-left" name="company_address" style="padding-left: 80px !important;">
        <t t-if="o.partner_type == 'supplier'">
                <h5>Orden de Pago <span t-esc="o.document_number" /></h5>
            </t>
            <t t-if="o.partner_type == 'customer'">
            <h5>Recibo de Pago <span t-esc="o.document_number" /></h5>
            </t>
        <span t-if="o.state == 'confirmed' or o.state == 'posted' or o.state == 'draft'">
            Fecha: <span t-field="o.payment_date"/><br/>
        </span>
        <span t-if="o.state == 'confirmed' or o.state == 'posted' or o.state == 'draft'">
        </span>
      </div>
      <!--END DATOS FACTURA-->
        </div>

        </div>
      <!--FIN HEADER-->

      <div class="page" style="margin-top: 0px !important;">
      <!--MY COMPANY-->
       <div class="row" style="border: 1px solid black; border-radius: 10px; margin-top: 0px !important;">
         <div class="col-6" style="margin-top: 8px !important;">
           <span t-field="o.company_id.name" style="font-size: 18px; font-weight: bold;"/>
           <div t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
         </div>
         <div class="col-6">
           <p><br/></p>
           <p><strong>CUIT</strong> <span t-field="o.company_id.vat"/> - <span t-field="o.company_id.partner_id.l10n_ar_afip_responsibility_type_id.name"/></p>
          <p><strong>Ingresos Brutos:</strong> <span t-if="o.company_id.l10n_ar_gross_income_type == 'exempt'">No liquida</span> <span t-if="o.company_id.l10n_ar_gross_income_type != 'exempt'" t-field="o.company_id.l10n_ar_gross_income_number"/> <br/> <strong>Inicio de actividades:</strong> <span t-field="o.company_id.l10n_ar_afip_start_date"/></p>
         </div>
       </div>
       <!--END MY COMPANY-->
       <br/>
       <!-- CLIENTE  -->
       <div class="row" style="border: 1px solid black; border-radius: 10px;">
         <div class="col-2">
      <t t-if="o.partner_type == 'supplier'">
         <span><strong>Proveedor</strong></span>
      </t>
      <t t-if="o.partner_type == 'customer'">
         <span><strong>Cliente</strong></span>
      </t>
        <!-- <strong><span>Cliente</span></strong>-->
         </div>
         <div name="invoice_address" class="col-4">
         <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
         </div>
         <div name="invoice_address" class="col-4">
         <strong>CUIT: </strong><span t-field="o.partner_id.vat"/>
         <p><strong>Condicion de IVA </strong><span t-field="o.partner_id.l10n_ar_afip_responsibility_type_id.name"/></p>
         </div>
       </div>
       <!-- END CLIENTE  -->

          <table class="table" name="payment_ids_table">
          <thead>
              <tr class="border-black">
          <th/>
                  <th>Tipo</th>
                  <th>Diario</th>
                  <t t-if="o.partner_type == 'supplier'">
                    <th>Fecha de pago</th>
                  </t>
                  <t t-if="o.partner_type == 'customer'">
                    <th>Fecha Cobro</th>
                </t>
                <t t-if="o.partner_type == 'customer'">
                    <th>Estado</th>
                  </t>
                  <th class="text-right">Monto</th>
              </tr>
          </thead>
          <tbody class="invoice_tbody">
              <tr t-foreach="o.payment_ids" t-as="p">
          <td/>
                <td><span t-if="p.payment_type_copy" t-field="p.payment_type_copy"/></td>
                <td><span t-if="p.journal_id" t-field="p.journal_id"/></td>
                <td><span t-if="p.date" t-field="p.date"/></td>
                <td t-if="o.partner_type == 'customer'"><span t-if="p.state" t-field="p.state"/></td>
                <td class="text-right">
                    <span t-field="p.amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
              </tr>
          </tbody>
          <tfoot>
            <tr class="border-black">
              <t t-if="o.partner_type == 'customer'">
                <td colspan="5"><strong>Total</strong></td>
              </t>
              <t t-if="o.partner_type == 'supplier'">
                <td colspan="4"><strong>Total</strong></td>
              </t>
              <td class="text-right">
                   <span t-field="o.payments_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
              </td>
            </tr>
          </tfoot>
            </table>

              <t t-set="ch" t-value="0" />
                <t t-as="p" t-foreach="o.payment_ids">
                    <t t-as="c" t-foreach="p.check_ids">
                        <t t-set="ch" t-value="1" />
                    </t>
                </t>
                <h5 t-if="ch == 1">Cheques</h5>
                <table class="table" t-if="ch == 1"> 
                
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
               
                    <thead>
                        <tr style="border-black">
                            <th class="text-left" name="th_description" style="width:50%;padding:5px">Banco</th>
                            <th class="text-right" name="th_quantity" style="width:20%; padding:5px">Fecha de Cobro</th>
                            <th class="text-right" name="th_priceunit" style="width:15%;padding:5px">Número</th>
                            <th class="text-center" name="th_vat" style="width:15%;padding:5px">CUIT</th>
                            <th class="text-right" name="th_amount" style="width:15%;padding:5px">Monto</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-as="p" t-foreach="o.payment_ids">
                            <t t-as="c" t-foreach="p.check_ids">
                                <tr style="font-size:12px">
                                    <td name="td_back" style="padding:0.25rem">
                                        <span t-field="c.bank_id.name" />
                                    </td>
                                    <td name="td_date" style="padding:0.25rem;text-align:right;">
                                        <span t-field="c.payment_date" />
                                    </td>
                                    <td name="td_name" style="padding:0.25rem;text-align:right;">
                                        <span t-field="c.number" />
                                    </td>
                                    <td name="td_owner_vat" style="padding:0.25rem;text-align:center;">
                                        <span t-field="c.owner_vat" />
                                    </td>
                                    <td name="td_amount" style="padding:0.25rem;text-align:right;">
                                        <span t-field="c.amount" />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <br />

        <h5>Facturas Relacionadas</h5>
                <table class="table" name="related_invoices">
                    <thead>
                        <tr>
                            <th style="width:50%;padding:5px">Factura</th>
                            <th style="width:50%;padding:5px">Monto de Facturas</th>
                            <th>Monto Pagado</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="o.matched_move_line_ids" t-as="f" style="font-size:12px">
                            <td style="padding:0.50rem">
                                <span t-if="f.move_id" t-field="f.move_id" />
                            </td>
                            <td style="padding:0.50rem">
                                <span t-if="f.balance" t-field="f.balance" />
                            </td>
                            <td style="padding:0.50rem">
                                <t t-set="payments" t-value="[]" />
                                <t t-foreach="o.payment_ids" t-as="p">
                                    <t t-foreach="p.invoice_line_ids.ids" t-as="i">
                                        <t t-set="payments" t-value="payments + [i]" />
                                    </t>
                                </t>

                                <t t-set="credit_move" t-value="request.env['account.partial.reconcile'].sudo().search([('credit_move_id', 'in', payments),('debit_move_id', '=', f.id)])" />
                                <t t-set="debit_move" t-value="request.env['account.partial.reconcile'].sudo().search([('debit_move_id', 'in', payments),('credit_move_id', '=', f.id)])" />
                                <t t-set="credit" t-value="0" />
                                <t t-set="debit" t-value="0" />
                                <t t-foreach="credit_move" t-as="c">
                                    <t t-set="credit" t-value="credit + c.amount" />
                                </t>
                                <t t-foreach="debit_move" t-as="d">
                                    <t t-set="debit" t-value="debit + d.amount" />
                                </t>

                                <t t-if="credit - debit != 0">
                                    <span t-esc="credit - debit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </t>
                                <t t-if="credit - debit == 0">
                                    <t t-set="credit" t-value="request.env['account.partial.reconcile'].sudo().search([('debit_move_id', '=', f.id)], limit=1)" />
                                    <t t-set="debit" t-value="request.env['account.partial.reconcile'].sudo().search([('credit_move_id', '=', f.id)], limit=1)" />
                                    <span t-esc="credit.amount - debit.amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </t>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td>
                                <strong>Total</strong>
                            </td>
                            <td class="text-left">
                                <span t-field="o.matched_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <br />
                <h6>
                    Diferencia de Pago/Saldo:
                    <span t-esc="o.unmatched_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                </h6>
                <br />
                <br />
                <br />
                <br />
                <br />
                <h6 class="text-left">Recibí Conforme:</h6>
          </div>
            </div>
            </div>
        </template>
    </data>
</odoo>  
